#!/usr/bin/env bash

# This script manages the manage_my_process script with start, stop, and restart commands

PROCESS_NAME="manage_my_process"
PID_FILE="/var/run/my_process.pid"
SCRIPT_PATH="/path/to/manage_my_process"  # Change this to the actual path of manage_my_process script

start() {
    if [ -f "$PID_FILE" ]; then
        echo "$PROCESS_NAME is already running"
    else
        nohup $SCRIPT_PATH > /dev/null 2>&1 &
        echo $! > $PID_FILE
        echo "$PROCESS_NAME started"
    fi
}

stop() {
    if [ -f "$PID_FILE" ]; then
        kill "$(cat $PID_FILE)"
        rm -f $PID_FILE
        echo "$PROCESS_NAME stopped"
    else
        echo "$PROCESS_NAME is not running"
    fi
}

restart() {
    stop
    start
    echo "$PROCESS_NAME restarted"
}

usage() {
    echo "Usage: $0 {start|stop|restart}"
    exit 1
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        usage
        ;;
esac

