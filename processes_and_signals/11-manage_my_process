#!/usr/bin/env bash
PID_FILE="/var/run/my_process.pid"
PROGRAM="manage_my_process"

start() {
    if [ -f "$PID_FILE" ]; then
        echo "$PROGRAM is already running"
        return 1
    fi

    "./$PROGRAM" &
    echo $! > "$PID_FILE"
    echo "$PROGRAM started"
}

stop() {
    if [ ! -f "$PID_FILE" ]; then
        echo "$PROGRAM is not running"
        return 1
    fi

    PID=$(cat "$PID_FILE")
    kill "$PID"
    rm "$PID_FILE"
    echo "$PROGRAM stopped"
}

restart() {
    stop
    start
    echo "$PROGRAM restarted"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac
